{
    "name": "server",
    "version": "0.0.0",
    "scripts": {
        "start": "nodemon",
        "start:prod": "ts-node -r tsconfig-paths/register -r dotenv/config ./app/www.ts",
        "build:check": "tsc --noEmit",
        "test": "mocha",
        "coverage": "nyc mocha",
        "lint": "tslint --project tsconfig.json",
        "format": "prettier --write . ../common",
        "format:check": "prettier --check . ../common"
    },
    "private": true,
    "dependencies": {
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/form-data": "^2.5.0",
        "@types/helmet": "^0.0.45",
        "@types/jsdom": "^16.2.15",
        "@types/mongodb": "^3.6.20",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.12",
        "@types/node": "^13.13.52",
        "axios": "^0.19.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "debug": "^4.3.7",
        "dompurify": "^2.5.6",
        "dotenv": "^8.6.0",
        "express": "^4.21.0",
        "form-data": "^3.0.1",
        "helmet": "^3.23.3",
        "inversify": "^5.1.1",
        "jsdom": "^16.7.0",
        "mongodb": "^3.7.4",
        "morgan": "^1.10.0",
        "multer": "^1.4.4",
        "reflect-metadata": "^0.1.14",
        "ts-node": "^8.10.2",
        "tsconfig-paths": "^3.15.0",
        "typescript": "^4.9.5"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/chai": "^4.3.19",
        "@types/chai-as-promised": "^7.1.8",
        "@types/dompurify": "^2.4.0",
        "@types/mocha": "^7.0.2",
        "@types/sinon": "^9.0.11",
        "@types/sinon-chai": "^3.2.12",
        "@types/supertest": "^2.0.16",
        "chai": "^4.5.0",
        "chai-as-promised": "^7.1.2",
        "mocha": "^7.2.0",
        "mongodb-memory-server": "^8.16.1",
        "nodemon": "^2.0.22",
        "nyc": "^15.1.0",
        "prettier": "^3.3.3",
        "sinon": "^9.2.4",
        "sinon-chai": "^3.7.0",
        "supertest": "^4.0.2",
        "tslint": "^6.1.3",
        "tslint-no-unused-expression-chai": "^0.1.4"
    },
    "mocha": {
        "require": [
            "ts-node/register",
            "tsconfig-paths/register",
            "source-map-support/register"
        ],
        "full-trace": true,
        "recursive": true,
        "spec": "app/**/*.spec.ts",
        "timeout": 10000
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "check-coverage": true,
        "per-file": true,
        "include": [
            "app/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "exclude": [
            "**/*.spec.ts",
            "app/www.ts",
            "app/server/server.ts",
            "app/server/app.ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "html",
            "text"
        ],
        "all": true,
        "cache": true,
        "sourceMap": true,
        "instrument": true
    }
}
