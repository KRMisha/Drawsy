{
    "name": "server",
    "version": "1.1.0",
    "scripts": {
        "start": "nodemon",
        "serve": "ts-node -r tsconfig-paths/register -r dotenv/config ./app/www.ts",
        "test": "mocha",
        "coverage": "nyc mocha",
        "format": "prettier --config ../.prettierrc.yaml --write \"app/**/*\"",
        "lint": "tslint --project tsconfig.json \"./app/**/*.ts\" --format stylish"
    },
    "dependencies": {
        "cookie-parser": "^1.4.5",
        "cors": "2.8.5",
        "debug": "^4.1.1",
        "dotenv": "^8.2.0",
        "express": "~4.17.1",
        "helmet": "^3.22.0",
        "inversify": "^5.0.1",
        "jsdom": "^16.2.1",
        "mongodb": "^3.5.5",
        "morgan": "^1.10.0",
        "reflect-metadata": "^0.1.10"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@types/chai": "^4.2.11",
        "@types/chai-as-promised": "^7.1.2",
        "@types/cookie-parser": "1.4.2",
        "@types/cors": "2.8.6",
        "@types/express": "^4.17.3",
        "@types/helmet": "0.0.45",
        "@types/jsdom": "^16.2.0",
        "@types/mocha": "^7.0.2",
        "@types/mongodb": "^3.5.4",
        "@types/morgan": "^1.9.0",
        "@types/node": "^13.9.4",
        "@types/sinon": "^7.5.2",
        "@types/sinon-chai": "^3.2.3",
        "@types/supertest": "^2.0.8",
        "chai": "~4.2.0",
        "chai-as-promised": "^7.1.1",
        "mocha": "^7.1.1",
        "mongodb-memory-server": "^6.5.0",
        "nodemon": "^2.0.2",
        "nyc": "^15.0.0",
        "prettier": "^2.0.2",
        "sinon": "^9.0.1",
        "sinon-chai": "^3.5.0",
        "supertest": "^4.0.2",
        "ts-node": "^8.8.1",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^6.1.0",
        "tslint-no-unused-expression-chai": "^0.1.4",
        "typescript": "^3.8.3"
    },
    "mocha": {
        "require": [
            "ts-node/register",
            "tsconfig-paths/register",
            "source-map-support/register"
        ],
        "full-trace": true,
        "recursive": true,
        "spec": "app/**/*.spec.ts",
        "timeout": 10000
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "check-coverage": true,
        "per-file": true,
        "include": [
            "app/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "exclude": [
            "**/*.spec.ts",
            "app/www.ts",
            "app/server/server.ts",
            "app/server/app.ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "html",
            "text"
        ],
        "all": true,
        "cache": true,
        "sourceMap": true,
        "instrument": true
    }
}
